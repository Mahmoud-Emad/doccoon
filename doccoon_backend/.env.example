# Doccoon Backend Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Core Settings (Required)
# ===========================================

# Set to False in production
DJANGO_DEBUG=True

# Environment: development, staging, production
ENV=development

# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Domain names (without protocol)
SERVER_DOMAIN_NAME=127.0.0.1:8000
CLIENT_DOMAIN_NAME=127.0.0.1:8080

# ===========================================
# Database (Optional - defaults to SQLite)
# ===========================================

# Uncomment and configure for PostgreSQL in production
# DB_NAME=doccoon
# DB_USER=doccoon_user
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# ===========================================
# Email Configuration (Optional)
# ===========================================

# SMTP settings for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ===========================================
# OAuth Providers (Optional)
# ===========================================

# Google OAuth
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth
# Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ===========================================
# AI Provider (Optional)
# ===========================================

# Gemini API Key for AI features (refine/rewrite)
# Get your key at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=
